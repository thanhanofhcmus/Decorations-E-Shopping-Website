<section class="content my-3">
    <div class="container bg-white">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 p-3 rounded shadow">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item bg-light fs-6" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
                            aria-selected="true">Đăng nhập
                        </button>
                    </li>
                    <li class="nav-item bg-light fs-6" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
                            aria-selected="false">Đăng ký
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade {{#unless signUpError}} show active {{/unless}}" id="pills-home"
                        role="tabpanel" aria-labelledby="pills-home-tab">
                        <form class="form-signIn mt-2" action="/auth/login" method="post">
                            <div class="form-label-group">
                                <input type="text" class="form-control" placeholder="Tên đăng nhập"
                                    name="username" required>
                            </div>
                            <div class="form-label-group">
                                <input type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu"
                                    name="password" required>
                            </div>
                            {{#if wrongPassword}} <p class="text-danger">Sai mật khẩu</p> {{/if}}
                            {{#if somethingWrong}} <p class="text-danger">Tên đăng nhập hoặc mật khẩu không đúng</p> {{/if}}
                            <a href="#" class="float-right" style="color: #F5A623"> Quên mật khẩu </a>
                            <div class="vstack gap-3 align-items-center">
                                <button class="btn btn-lg btn-primary text-uppercase my-3 text-white text-hover-black"
                                    type="submit">
                                    Đăng nhập
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade {{#if signUpError}} active show {{/if}}" id="pills-profile"
                        role="tabpanel" aria-labelledby="pills-profile-tab">
                        <form id="form-signUp-cart" class="form-signIn mt-2" action="/auth/sign-up" method="post">
                            <div class="form-label-group">
                                <input type="text" id="inputName" class="form-control" placeholder="Nhập họ và tên"
                                    name="name" required autofocus>
                            </div>
                            <div class="form-label-group">
                                <input type="email" id="inputEmail" class="form-control"
                                    placeholder="Nhập địa chỉ email" name="email" required>
                            </div>
                            <div class="form-label-group">
                                <input type="text" id="inputPhone" class="form-control" placeholder="Nhập username"
                                    name="username" required>
                            </div>
                            <div class="form-label-group">
                                <input type="password" id="inputPassword" class="form-control"
                                    placeholder="Nhập mật khẩu" name="password" required>
                            </div>
                            <div class="form-label-group mb-3">
                                <input type="password" id="inputConfirmPassword" class="form-control"
                                    name="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                            </div>
                            {{#if signUpError}}
                            {{#if signUpError.userExists}}
                            <p class="text-danger">Username đã được đăng ký từ trước</p>
                            {{/if}}
                            {{#if signUpError.passwordRetypeWrong}}
                            <p class="text-danger">Nhập lại mật khẩu không trùng</p>
                            {{/if}}
                            {{/if}}
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-lg btn-primary text-uppercase my-3 text-white text-hover-black"
                                    type="submit">
                                    Đăng ký
                                </button>

                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
