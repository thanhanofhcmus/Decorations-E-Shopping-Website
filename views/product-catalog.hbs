<!-- breadcrumb  -->
<section class="breadcrumb">
  <div class="container">
    <ol class="breadcrumb mb-0 p-0 bg-transparent">
      <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
      <li class="breadcrumb-item active"><a href="#">{{title}}</a></li>
    </ol>
  </div>
</section>

<section class="content my-4">
  <div class="container">
    <div class="product bg-white" style=" width: 100%;">
      <div class="items">
        <div class="row">
          {{#if products}}
          {{#each products}}
          <div class="col-lg-3 col-md-4 col-xs-6 item">
            <div class="card">
              <a href={{this.link}} class="single-product" style="text-decoration: none; color: black;" data-toggle="tooltip"
                data-placement="bottom" title="{{this.name}}">
                <img class="card-img-top anh" src="/images/lap-ke-hoach-kinh-doanh-hieu-qua.jpg" alt="{{this.name}}">
                <div class="card-body product-content mt-3">
                  <h3 class="card-title ten">{{this.name}}</h3>
                  <div class="gia d-flex align-items-baseline">
                    <div class="new-price">{{this.price}} đ</div>
                    {{#if this.discount}}
                    <div class="old-price text-muted">{{this.oldPrice}} đ</div>
                    <div class="sale">-{{this.discount}}%</div>
                    {{/if}}
                  </div>
                  <div class="danhgia">
                    <ul class="d-flex" style="list-style: none;">
                      <li class="active"><i class="fa fa-star"></i></li>
                      <li class="active"><i class="fa fa-star"></i></li>
                      <li class="active"><i class="fa fa-star"></i></li>
                      <li class="active"><i class="fa fa-star"></i></li>
                      <li><i class="fa fa-star"></i></li>
                      <li><span class="text-muted">{{this.view}} Lượt xem</span></li>
                    </ul>
                  </div>
                </div>
              </a>
            </div>
          </div>
          {{/each}}
          {{/if}}
        </div>
      </div>

      <!-- pagination bar -->
      <div class="pagination-bar my-3">
        <div class="row">
          <div class="col-12">
            <nav>
              <ul class="pagination justify-content-center">
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&rsaquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>