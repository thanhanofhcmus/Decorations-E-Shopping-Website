<section class="breadcrumb">
    <div class="container">
        <ol class="breadcrumb mb-0 p-0 bg-transparent">
            <li class="breadcrumb-item"><a class="text-danger" href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a class="text-danger" href="/catalogs/{{catalog.id}}">{{catalog.name}}</a></li>
            <li class="breadcrumb-item active">{{title}}</li>
        </ol>
    </div>
</section>

<section class="product-page mb-4">
    <div class="container">
        <div class="product-detail bg-white p-4">
            <div class="row">
                <div class="col-md-5 image-block">
                    <div class="anhto mb-4">
                        <a class="active" href="{{imageLink}}"
                            data-fancybox="thumb-img">
                            <img class="product-image" src="{{imageLink}}" style="width: 100%;">
                        </a>
                        <a href="/images/lap-ke-hoach-kinh-doanh-hieu-qua-ms.jpg" data-fancybox="thumb-img"></a>
                    </div>
                    <div class="list-image-detail d-flex mb-4" style="margin-left: 2rem;">
                        <img class="thumb-img thumb1 mr-3" src="{{imageLink}}" class="img-fluid">
                        <img class="thumb-img thumb2" src="/images/lap-ke-hoach-kinh-doanh-hieu-qua-ms.jpg" class="img-fluid">
                    </div>
                </div>
                <div class="col-md-7 info-block">
                    <div class="row">
                        <div class="col-md-12 header">
                            <h4 class="ten">{{name}}</h4>
                            <div class="rate">
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star "></i>
                            </div>
                            <hr>
                        </div>
                        <div class="col-md-7">
                            <div class="gia">
                                <div class="normal-price">Giá gốc:<span class="old-price ml-2">{{oldPrice}} ₫</span></div>
                                <div class="price">Giá bán: <span class="new-price font-weight-bold">{{price}} ₫</div>
                                <div class="money-saved">Tiết kiệm: <b>{{saved}} ₫</b> <span class="sale">-{{discount}}%</span> </div>
                            </div>
                            <div class="_number d-flex">
                                <label class="font-weight-bold">Số lượng: </label>
                                <div class="input-number input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text btn-spin btn-dec">-</span>
                                    </div>
                                    <input type="text" value="1" class="product-number  text-center">
                                    <div class="input-group-append">
                                        <span class="input-group-text btn-spin btn-inc">+</span>
                                    </div>
                                </div>
                            </div>
                            <div class="buy-btn btn w-100 text-uppercase">Chọn mua</div>
                            <a class="how-to-buy text-decoration-none" href="#">(Vui lòng xem hướng dẫn mua hàng)</a>
                        </div>
                    </div>
                </div>

                <!-- decripstion của 1 sản phẩm: giới thiệu , đánh giá độc giả  -->
                <div class="product-description col-md-9">
                    <!-- 2 tab ở trên  -->
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active text-uppercase" id="nav-introduce-tab" data-toggle="tab"
                                href="#nav-introduce" role="tab" aria-controls="nav-introduce" aria-selected="true">Giới
                                thiệu</a>
                            <a class="nav-item nav-link text-uppercase" id="review-nav-tab" data-toggle="tab"
                                href="#review-nav" role="tab" aria-controls="review-nav" aria-selected="false">Đánh
                                giá của độc giả</a>
                        </div>
                    </nav>
                    <!-- nội dung của từng tab  -->
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active ml-3" id="nav-introduce" role="tabpanel"
                            aria-labelledby="nav-introduce-tab">
                            {{content}}
                        </div>
                        <div class="tab-pane fade" id="review-nav" role="tabpanel" aria-labelledby="review-nav-tab">
                            <div class="row">
                                <div class="col-md-3 text-center">
                                    <p class="title">Đánh giá trung bình</p>
                                    <div class="diem">0/5</div>
                                    <div class="sao">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <p class="review-number text-muted">(0 nhận xét)</p>
                                </div>
                                <div class="col-md-5">
                                    <div class="review-title text-center">
                                        <div class="margin-bottom d-flex align-items-center">5 <i class="fa fa-star"></i>
                                            <div class="progress mx-2">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div> 0%
                                        </div>
                                        <div class="margin-bottom d-flex align-items-center">4 <i class="fa fa-star"></i>
                                            <div class="progress mx-2">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div> 0%
                                        </div>
                                        <div class="margin-bottom d-flex align-items-center">3 <i class="fa fa-star"></i>
                                            <div class="progress mx-2">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div> 0%
                                        </div>
                                        <div class="margin-bottom d-flex align-items-center">2 <i class="fa fa-star"></i>
                                            <div class="progress mx-2">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div> 0%
                                        </div>
                                        <div class="margin-bottom d-flex align-items-center">1 <i class="fa fa-star"></i>
                                            <div class="progress mx-2">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div> 0%
                                        </div>
                                        <div class="btn write-review mt-3">Viết đánh giá của bạn</div>
                                    </div>
                                    <!-- nội dung của form đánh giá  -->
                                    <div class="review-form">
                                        <h6 class="title text-uppercase">GỬI ĐÁNH GIÁ CỦA BẠN</h6>
                                        <span class="your-review">Đánh giá của bạn về sản phẩm này:</span>
                                        <div
                                            class="rating d-flex flex-row-reverse align-items-center justify-content-end">
                                            <input type="radio" name="star" id="star1"><label for="star1"></label>
                                            <input type="radio" name="star" id="star2"><label for="star2"></label>
                                            <input type="radio" name="star" id="star3"><label for="star3"></label>
                                            <input type="radio" name="star" id="star4"><label for="star4"></label>
                                            <input type="radio" name="star" id="star5"><label for="star5"></label>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="txtFullname w-100"
                                                placeholder="Mời bạn nhập tên(Bắt buộc)">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="txtEmail w-100"
                                                placeholder="Mời bạn nhập email(Bắt buộc)">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="txtComment w-100"
                                                placeholder="Đánh giá của bạn về sản phẩm này">
                                        </div>
                                        <div class="btn send-bl-btn">Gửi bình luận</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <!-- het tab review-nav  -->
                    </div>
                    <!-- het tab-content  -->
                </div>
                <!-- het product-description -->
            </div>
            <!-- het row  -->
        </div>
        <!-- het product-detail -->
    </div>
    <!-- het container  -->
</section>
<!-- het product-page -->