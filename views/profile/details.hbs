<section class="content my-3">
    <div class="container bg-white">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item bg-light fs-6" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
                            aria-selected="true">Thông tin cá nhân
                        </button>
                    </li>
                    <li class="nav-item bg-light fs-6" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
                            aria-selected="false">Đơn hàng của tôi
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade {{#unless signUpError}} show active {{/unless}}" id="pills-home"
                        role="tabpanel" aria-labelledby="pills-home-tab">
                        <div class="vstack gap-3 p-3 rounded shadow">
                            <p class="p-1 border border-primary p-3 rounded fs-6">Họ và Tên: {{user.name}}</p>
                            <p class="p-1 border border-primary p-3 rounded fs-6">Username: {{user.username}}</p>
                            <p class="p-1 border border-primary p-3 rounded fs-6">Email: {{user.email}}</p>
                            <div class="d-flex justify-content-around">
                                <a href="/auth/logout" class="btn btn-primary align-self-center text-uppercase">Đăng xuất</a>
                                <a href="/profile/edit" class="btn btn-primary align-self-center text-uppercase">Chỉnh sửa</a>
                                <a href="/auth/delete" class="btn btn-secondary align-self-center text-uppercase">Xóa tài khoản</a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade {{#if signUpError}} active show {{/if}}" id="pills-profile"
                        role="tabpanel" aria-labelledby="pills-profile-tab">
                        {{#if orderList}}
                        {{#each orderList}}
                        <div class="card">
                            <div class="card-header active">
                                <h5 class="mb-0">
                                    <a href="#" class="header">
                                        <span class="label">{{this.id}}</span>
                                    </a>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="cart-item d-flex mb-3">
                                    <input type="text" name="productId" value="{{this.id}}" class="d-none">
                                    <input type="text" name="price" value="{{this.price}}" class="d-none">
                                    <a href="{{this.product.link}}" class="img">
                                        <img src="{{this.product.imagesList.[0]}}" class="img-fluid">
                                    </a>
                                    <div class="item-caption d-flex w-100">
                                        <div class="item-info ms-3">
                                            <a href="{{this.product.link}}" class="ten">{{this.product.name}}</a>
                                            <div class="_number d-flex">
                                                SL: {{this.product.quantity}}
                                            </div>
                                        </div>
                                        <div class="item-price ms-auto d-flex flex-column align-items-end">
                                            <div>
                                                <span class="new-price">{{this.product.price}}</span>
                                                <span> ₫</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>(và {{this.numProducts}} sản phẩm khác)</div>
                                <hr class="mb-3">
                                <div class="group d-flex justify-content-between align-items-center">
                                    <strong class="text-uppercase">Tổng cộng:</strong>
                                    <p>
                                        <input type="text" name="total" value="{{totalPrice.price}}" class="_total-price d-none">
                                        <span class="_total">{{this.totalPrice}}</span>
                                        <span> ₫</span>
                                    </p>
                                </div>
                                <div>Trạng thái: {{this.status}}</div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>