{{#if allProducts}}
{{#each allProducts}}
{{#if this.products}}
<section class="one-block bg-white">
    <div class="container">
        <div class="product" style=" width: 100%;">
            <div class="row">
                <!--header-->
                <div class="col-12 d-flex justify-content-between align-items-center pb-2 bg-transparent pt-4">
                    <div class="text-uppercase" style="font-size: 1.25rem;">{{this.catalog.name}}</div>
                    <a href="/catalogs/{{this.catalog.id}}" class="btn btn-warning btn-sm text-white">Xem tất cả</a>
                </div>
            </div>
            <div class="_product-block" style="padding-bottom: 2rem;">
                {{#each this.products}}
                {{> item-card}}
                {{/each}}
            </div>
        </div>
    </div>
</section>
{{/if}}
{{/each}}
{{/if}}