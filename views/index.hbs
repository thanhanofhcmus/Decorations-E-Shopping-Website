{{#if allProducts}}
{{#each allProducts}}
{{#if this.products}}
<section class="one-block bg-white">
    <div class="container">
        <div class="product" style=" width: 100%;">
            <div class="row">
                <!--header-->
                <div class="col-12 d-flex justify-content-between align-items-center pb-2 bg-transparent pt-4">
                    <div class="text-uppercase" style="font-size: 1.25rem;">{{this.catalog.name}}</div>
                    <a href="/catalogs/{{this.catalog.id}}" class="btn btn-warning btn-sm text-white">Xem tất cả</a>
                </div>
            </div>
            <div class="_product-block" style="padding-bottom: 2rem;">
                {{#each this.products}}
                <div class="card">
                    <a href={{this.link}} class="single-product" style="text-decoration: none; color: black;"
                        data-toggle="tooltip" data-placement="bottom" title="{{this.name}}">
                        <img class="card-img-top anh" src={{this.imageLink}} alt="{{this.name}}">
                        <div class="card-body product-content mt-3">
                            <h3 class="card-title ten">{{this.name}}</h3>
                            <div class="gia d-flex align-items-baseline">
                                <div class="new-price">{{this.price}} đ</div>
                                {{#if this.discount}}
                                <div class="old-price text-muted">{{this.oldPrice}} đ</div>
                                <div class="sale">-{{this.discount}}%</div>
                                {{/if}}
                            </div>
                            <ul class="d-flex" style="list-style: none;">
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><span class="text-muted">{{this.view}} Lượt xem</span></li>
                            </ul>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
{{/if}}
{{/each}}
{{/if}}
